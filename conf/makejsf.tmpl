XCOMM #---------------------------------------------------
XCOMM # Machine dependant configuration to build JSF application.
XCOMM #---------------------------------------------------
XCOMM # 
DllSuf        = so
SrcSuf        = cxx
ObjSuf        = o

CXX           = g++
LD            = g++ 

ROOTLIBS      = -L$(ROOTSYS)/lib -lNew -lBase -lCint -lClib -lCont -lFunc \
                -lGraf -lGraf3d -lHist -lHtml -lMatrix -lMeta -lMinuit -lNet \
                -lPostscript -lProof -lTree -lUnix -lZip
ROOTGLIBS     = -lGpad -lGui -lGX11 -lX3d

LCLIB 	  = $(LCDIR)/lib


XCOMM # -----------------------------------------------------
XCOMM # Linux with egcs
XCOMM # -----------------------------------------------------
#if defined(LinuxArchitecture)
CXXFLAGS      = -O2 -Wall  -fno-rtti -fno-exceptions -fPIC \
		-I$(JSFROOT)/include -I$(ROOTSYS)/include
SOFLAGS       = -shared -Wl,-soname,$(SONAME).so 
LCDIR         = /proj/phys/lclib/pro
LDFLAGS       = $(ANALLIB) $(GLIBS)
LIBS          = $(ROOTLIBS) -lm -ldl -rdynamic
GLIBS         = $(ROOTLIBS) -lRint $(ROOTGLIBS) -L/usr/X11R6/lib \
		-lXpm -lX11 -lf2c -lm -ldl -rdynamic
SOEXT         = sl
BLOCKDATA     = 
#endif
